{
  "name": "cdc-attendance",
  "version": "1.0.0",
  "description": "CDC Attendance Management System - Full Stack Application",
  "main": "index.js",
  "scripts": {
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm run dev",
    "start": "concurrently \"npm run server:prod\" \"npm run client:preview\"",
    "server:prod": "cd backend && npm start",
    "client:preview": "cd frontend && npm run preview",
    "build": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "cd frontend && npm run lint",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules",
    "reset": "npm run clean && npm run install-all"
  },
  "keywords": [
    "attendance",
    "management",
    "cadd",
    "centre",
    "education",
    "react",
    "nodejs",
    "mongodb",
    "express"
  ],
  "author": "CADD Centre",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/cadd-attendance.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/cadd-attendance/issues"
  },
  "homepage": "https://github.com/your-username/cadd-attendance#readme"
}
