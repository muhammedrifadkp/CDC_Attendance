# CDC Attendance Management System - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Application Environment
NODE_ENV=production
PORT=5000

# Database Configuration
MONGO_URI=your_mongodb_connection_string_here

# JWT Configuration
JWT_SECRET=your_secure_jwt_secret_key_here
JWT_REFRESH_SECRET=your_secure_refresh_token_secret_here
JWT_EXPIRE=30d

# Application URLs
APP_URL=your_frontend_url_here
FRONTEND_URL=your_frontend_url_here
PROD_FRONTEND_URL=your_frontend_url_here
PROD_API_URL=your_backend_url_here

# CORS Configuration
CORS_ORIGINS=your_frontend_url_here,http://localhost:5173

# Email Configuration (Optional)
EMAIL_ENABLED=false
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_APP_PASSWORD=your_app_specific_password

# Security Configuration
ENABLE_RATE_LIMITING=true

